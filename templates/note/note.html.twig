{% extends 'home.html.twig' %}

{% block title %}Create{% endblock %}
{% block note %}
<div class="container p-5 mt-5">
 <h2 class="text-center text-light">List of new note</h2>


    <div class="row">
        {% for item in res %}
                    <div class="card py-3 mt-3 bg-dark" id="content" title="{{ item.title }}">
                        <div class="card-header">
                            <h4 class="text-center text-light">{{ item.title }}</h4>
                        </div>

                        <div class="card-body">
                            <p class="text-start text-light">{{ item.text }}</p>
                            {% for image in item.images %}
                            {% if loop.first %}
                                <div class="top-img">
                                    <img src="{{ asset('upload/' ~ image.url) }}" class="card-img-top" alt="Image">
                                </div>
                            {% endif %}
                        {% endfor %}
                        </div>
                        <div class="d-flex gap-3">
                          {% if item.images %}
                          <a href="/show/{{item.id}}"><img src="{{ asset('image/' ~ 'video.png') }}" id="icons" style="height:40px;margin-left:15px"  alt="Image"></a>
                            <a href="/show/{{item.id}}"><img src="{{ asset('image/' ~ 'audio.png') }}" id="icons" style="height:40px"  alt="Image"></a>
                          {% endif %}
                        </div>
                    </div>
          {% endfor %}
    </div>

</div>
{% endblock %}
